.home-page {
  padding: 40rpx;
}

.home-page .head {
  background: #efefef;
  border-radius: 8rpx;
  /* height: 260rpx; */
  margin-bottom: 20rpx;
  background-repeat:repeat;
  background-size:100%;
}

.home-page .list {
  display: flex;
  width: 100%;
  margin-bottom: 20rpx;
}

.home-page .list-box {
  width: 49%;
  box-shadow: 2rpx 2rpx 4rpx #9B9B9B50;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-page .list-box + .list-box {
  margin-left: 2%;
}

.home-page .list-box text {
  position: absolute;
  color: #ffffff;
  font-size: 32rpx;
}

.home-page .list-box image {
  width: 100%;
  height: 700rpx;
}

.home-page .swiper-item {
  width: 100%;
  height: 100%;
}

.home-page .sub-title {
  padding: 40rpx;
  text-align: center;
  color: #000000;
}

