.expressDetail {
  position: fixed;
  width: 100%;
  height: 100%;
  background: #F7F7F7;
}

.expressDetail {
  background: #ffffff;
  color: #9B9B9B;
  font-size: 28rpx;
  padding-bottom: 40rpx;
}

.expressDetail .subtitle {
  padding-top: 10px;
  color: #000000;
  font-size: 32rpx;
}

.expressDetail .orderNo  {
  color: #000000;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  /* border-top: 1rpx solid  #D8D8D860;
  border-bottom: 1rpx solid  #D8D8D860; */
}

.expressDetail .address {
  padding: 30rpx;
  font-size: 28rpx;
  box-shadow: -2px 0px 8px #efefef;
  color: #000000;
  margin: 30rpx 20rpx;
}

.expressDetail .order-info {
  padding: 30rpx 0;
  font-size: 20rpx;
  box-shadow: -2px 0px 8px #efefef;
}

.expressDetail .order-info .title {
  color: #000000; 
  font-size: 26rpx;
}

.expressDetail .order-info image {
  width: 76px;
  height: 76px;
  padding: 0 20rpx;
}

.expressDetail .order-box {
  padding: 20rpx 0;
  line-height: 50rpx;
}

.expressDetail .price {
  color: #000000;
  font-size: 28rpx;
}

.expressDetail  .footer {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.expressDetail  .footer .btn {
  background: #000000;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 96rpx;
  margin-top: 40rpx;
  border-radius: 0;
}
